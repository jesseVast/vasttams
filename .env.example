# TAMS API Environment Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# VAST Database settings
VAST_ENDPOINT=http://localhost:9090
VAST_ACCESS_KEY=your_vast_access_key_here
VAST_SECRET_KEY=your_vast_secret_key_here
VAST_BUCKET=tams
VAST_SCHEMA=tams7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s:%(lineno)d - %(levelname)s - %(message)s

# S3 settings for flow segment storage
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=your_s3_access_key_here
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
S3_BUCKET_NAME=tams
S3_USE_SSL=false
S3_PRESIGNED_URL_UPLOAD_TIMEOUT=3600
S3_PRESIGNED_URL_DOWNLOAD_TIMEOUT=3600
S3_TAMS_ROOT=/tams

# Storage API limits
TAMS_FLOW_STORAGE_DEFAULT_LIMIT=10
TAMS_SEGMENT_STORAGE_DEFAULT_LIMIT=10

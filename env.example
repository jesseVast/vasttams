# TAMS API Environment Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# VAST store settings
VAST_DATA_DIR=./vast_data

# VAST Database settings
VAST_ENDPOINT=http://localhost:8080
VAST_ACCESS_KEY=test-access-key
VAST_SECRET_KEY=test-secret-key
VAST_BUCKET=tams-bucket
VAST_SCHEMA=tams-schema

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security (change in production)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage settings
STORAGE_TYPE=http_object_store
STORAGE_BASE_URL=https://storage.example.com

# Webhook settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# S3 settings for flow segment storage
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=tams-segments
S3_USE_SSL=false